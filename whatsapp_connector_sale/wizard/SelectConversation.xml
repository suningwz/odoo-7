<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="acrux_chat_select_conversation_wizard_form" model="ir.ui.view">
        <field name="name">acrux.chat.select.conversation.wizard.form</field>
        <field name="model">acrux.chat.select.conversation.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="conversation_id" widget="selection"/>
                </group>
                <footer>
                    <button class="oe_highlight" type="object" name="save_and_send">Send</button>
                    <button class="oe_link" special="cancel">Cancel</button>
                </footer>
            </form>
        </field>
    </record>

</odoo>
